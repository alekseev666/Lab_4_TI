<UserControl x:Class="Lab_4_TI.Views.FormulaTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_4_TI.Views"
             xmlns:vm="clr-namespace:Lab_4_TI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:FormulaTabViewModel />
    </UserControl.DataContext>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Формула:"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0" />
            <TextBox Width="520"
                     Text="{Binding TekstFormuli, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Разобрать и вычислить"
                    Command="{Binding KomandaRazobratIVichislit}"
                    Margin="6,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="Озвучка: ! / not — НЕ; &amp; / and — И; | / or — ИЛИ; ^ — XOR; -&gt; — импликация; = — эквиваленция"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   Margin="0,0,0,8" />

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding TekstResultata}"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     BorderThickness="0" />
        </ScrollViewer>

        <Button Grid.Row="3"
                Content="Копировать в буфер"
                Command="{Binding KomandaSkopirovat}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Width="120" />
    </Grid>
</UserControl>