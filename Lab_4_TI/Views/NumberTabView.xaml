<UserControl x:Class="Lab_4_TI.Views.NumberTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_4_TI.Views"
             xmlns:vm="clr-namespace:Lab_4_TI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:NumberTabViewModel />
    </UserControl.DataContext>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="n:"
                       VerticalAlignment="Center"
                       Margin="0,0,6,0" />
            <TextBox Width="60"
                     Text="{Binding N, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="номер:"
                       Margin="10,0,6,0"
                       VerticalAlignment="Center" />
            <TextBox Width="200"
                     Text="{Binding TekstNomera, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Таблица истинности"
                    Command="{Binding KomandaPostroitTablitsu}"
                    Margin="10,0,6,0" />
            <Button Content="СДНФ"
                    Command="{Binding KomandaPostroitSDNF}"
                    Margin="6,0,6,0" />
            <Button Content="СКНФ"
                    Command="{Binding KomandaPostroitSKNF}"
                    Margin="6,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="(Пояснение: бит i(номера) соответствует кортежу с индексом i; индексация от 0..2^n-1; кортежи перечислены от 0->..->2^n-1 как x1..xn)"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   Margin="0,0,0,8" />

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding TekstResultata}"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     BorderThickness="0" />
        </ScrollViewer>

        <Button Grid.Row="3"
                Content="Копировать в буфер"
                Command="{Binding KomandaSkopirovat}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Width="120" />
    </Grid>
</UserControl>