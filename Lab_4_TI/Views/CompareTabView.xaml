<UserControl x:Class="Lab_4_TI.Views.CompareTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_4_TI.Views"
             xmlns:vm="clr-namespace:Lab_4_TI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:CompareTabViewModel />
    </UserControl.DataContext>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Style="{StaticResource CardPanel}">
            <StackPanel>
                <TextBlock Text="Сравнение двух функций" Style="{StaticResource HeaderText}"/>
                
                <StackPanel Margin="0,8,0,0">
                    <TextBlock Text="Левая функция:" Style="{StaticResource ModernLabel}" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding LeviyVvod, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             ToolTip="Введите формулу или номер (n=3,номер=11)"
                             Margin="0,0,0,12" />
                    
              
                    <TextBlock Text="Правая функция:" Style="{StaticResource ModernLabel}" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding PraviyVvod, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             ToolTip="Введите формулу или номер (n=3,номер=11)"
                             Margin="0,0,0,12" />
                </StackPanel>
                
                <Button Content="Эквивалентны?"
                        Command="{Binding KomandaSravnit}"
                        Style="{StaticResource ModernButton}"
                        HorizontalAlignment="Center"
                        Padding="24,10" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Style="{StaticResource CardPanel}">
            <StackPanel>
                <TextBlock Text="Пресеты"
                           Style="{StaticResource HeaderText}"
                           FontSize="14" />
                <StackPanel Orientation="Horizontal">
                    <Button Content="Пример 1: n=3,номер=11 vs n=3,номер=11"
                            Command="{Binding KomandaPreset1}"
                            Style="{StaticResource PresetButton}" />
                    <Button Content="Пример 2: формула vs её СДНФ"
                            Command="{Binding KomandaPreset2}"
                            Style="{StaticResource PresetButton}" />
                </StackPanel>
            </StackPanel>
        </Border>
        <TextBlock Grid.Row="2"
                   Text="Формат: формула (x1 &amp; x2) или номер (n=3,номер=11 / n=3,nomer=11)"
                   Style="{StaticResource HintText}"
                   Margin="8" />
        <Border Grid.Row="3"
                Style="{StaticResource CardPanel}">
            <ScrollViewer Style="{StaticResource ModernScrollViewer}">
                <TextBox Text="{Binding TekstResultata}"
                         Style="{StaticResource ResultTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="200" />
            </ScrollViewer>
        </Border>
        <Button Grid.Row="4"
                Content="Копировать в буфер"
                Command="{Binding KomandaSkopirovat}"
                Style="{StaticResource CopyButton}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0" />
    </Grid>
</UserControl>