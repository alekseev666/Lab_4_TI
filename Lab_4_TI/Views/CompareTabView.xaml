<UserControl x:Class="Lab_4_TI.Views.CompareTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_4_TI.Views"
             xmlns:vm="clr-namespace:Lab_4_TI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:CompareTabViewModel />
    </UserControl.DataContext>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBox Width="380"
                     Text="{Binding LeviyVvod, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Введите формулу или номер (n=3,номер=11)" />
            <TextBlock Text="   vs   "
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
            <TextBox Width="380"
                     Text="{Binding PraviyVvod, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Введите формулу или номер (n=3,номер=11)" />
            <Button Content="Эквивалентны?"
                    Command="{Binding KomandaSravnit}"
                    Margin="6,0,0,0" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="Формат: формула (x1 &amp; x2) или номер (n=3,номер=11)"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   Margin="0,0,0,8" />

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding TekstResultata}"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     BorderThickness="0" />
        </ScrollViewer>

        <Button Grid.Row="3"
                Content="Копировать в буфер"
                Command="{Binding KomandaSkopirovat}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Width="120" />
    </Grid>
</UserControl>